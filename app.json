{
    "expo": {
        "name": "films_app",
        "slug": "films_app",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./shared/assets/images/icon.png",
        "scheme": "filmsapp",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "usesCleartextTraffic": true,
            "edgeToEdgeEnabled": true,
            "package": "com.peggy_13.films_app"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./shared/assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "18f2d9de-b250-42ba-8e17-8c79a7b1c7f2"
            }
        },
        "owner": "peggy_13"
    }
}
